{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "blue-bell": "#78a9ff",
    "blue-black": "#353535",
    "celeste-blue": "#3ddbd9",
    "light-sky-blue": "#82cfff",
    "main-bg": "#161616",
    "pastal-grey": "#f2f4f8",
    "pistachio-green": "#42be65",
    "t-background": "p:main-bg",
    "terminal-black": "#525252",
    "terminal-blue": "#78a9ff",
    "terminal-green": "#42be65",
    "terminal-magenta": "#be95ff",
    "terminal-red": "#ee5396",
    "terminal-white": "#f2f4f8",
    "terminal-yellow": "#ffcc66",
    "white-blue": "#f2f4f8"
  },
  "secondary_prompt": {
    "template": ">> ",
    "foreground": "p:terminal-magenta",
    "background": "transparent"
  },
  "transient_prompt": {
    "template": "> ",
    "foreground": "p:terminal-magenta",
    "background": "transparent",
    "newline": true
  },
  "console_title_template": " {{ .Folder }} :: {{if .Root}}Admin{{end}}",
  "terminal_background": "p:t-background",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "\n",
          "foreground": "p:terminal-blue",
          "background": "transparent",
          "type": "text",
          "style": "plain"
        },
        {
          "options": {
            "style": "powerlevel"
          },
          "template": "<b>{{ .Path }}</b> ",
          "foreground": "p:terminal-blue",
          "type": "path",
          "style": "plain"
        },
        {
          "options": {
            "branch_icon": "",
            "commit_icon": "@",
            "fetch_status": true
          },
          "template": "on <p:pistachio-green>{{ .HEAD}}{{ if or (.Working.Changed) (.Staging.Changed) }}*{{ end }}</> <p:terminal-green>{{ if gt .Behind 0 }}\u2193{{ end }}{{ if gt .Ahead 0 }}\u2191{{ end }}</>",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "foreground": "p:terminal-yellow",
          "type": "executiontime",
          "style": "powerline"
        },
        {
          "template": "{{ if .SSHSession }} {{ .UserName }}@{{ .HostName }}{{ end }}",
          "foreground": "p:terminal-yellow",
          "type": "session",
          "style": "powerline"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "template": "{{ if gt .Code 0 }}<p:terminal-red>></>{{ else }}<p:terminal-magenta>></>{{ end }}",
          "foreground": "p:terminal-magenta",
          "background": "transparent",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "tooltips": [
    {
      "foreground": "p:light-sky-blue",
      "type": "aws",
      "style": "powerline",
      "tips": [
        "aws"
      ]
    },
    {
      "foreground": "p:light-sky-blue",
      "type": "gcp",
      "style": "powerline",
      "tips": [
        "gcloud",
        "gsutil"
      ]
    },
    {
      "foreground": "p:terminal-magenta",
      "type": "kubectl",
      "style": "powerline",
      "tips": [
        "kubectl",
        "k",
        "kubectx",
        "kubens"
      ]
    }
  ],
  "version": 4,
  "final_space": true
}
